@rendermode InteractiveServer
@inject NavigationManager Navigation

<aside id="categories">
    <h3>Categories</h3>

    @foreach (var category in categories)
    {
        <div class="category" @onclick="() => NavigateToCategoryComponent(category)">@category</div>
    }
</aside>

@code {
    List<string> categories = new List<string> { "Tech", "MakeUp", "Food", "construction" };

    private void NavigateToCategoryComponent(string category)
    {
        Navigation.NavigateTo("category-param/" + @category.ToLower());
    }
}
