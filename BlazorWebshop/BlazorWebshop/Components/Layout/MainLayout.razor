@inherits LayoutComponentBase
@inject NavigationManager Navigation

<div class="page">
     @* <div class="sidebar">
         <NavMenu />
     </div> *@

    <main>
        <header class="top-row px-4 d-flex justify-content-between">
            <Title />
            <BasketButton />
        </header>
        <div class="d-flex justify-content-between">
            <article class="content px-4">
                @Body
